{
  "manifest_version": 2,
  "name": "Tixcraft select ticket numbers",
  "description": "select tickets numbers",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["http://tixcraft.com/ticket/ticket/*"],
      "js": ["main.js"]
    }
  ],

  // chrome
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs", "http://tixcraft.com/ticket/ticket/*"
  ],

  // firefox
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  }
}
